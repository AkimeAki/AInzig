---
import { Main } from "@/components/Main";
import { getTitle, pathToTitle } from "@/libs/page";

const page = "";
const title = getTitle(pathToTitle(Astro.url.pathname));
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="彩季のポートフォリオです。" />
		<meta name="format-detection" content="email=no,telephone=no,address=no" />
		<meta name="author" content="彩季" />
		<link rel="canonical" href={`https://aki.wtf/${page}`} />
		<link rel="icon" href="/favicon.ico" />
		<title>{title}</title>
		<link rel="sitemap" href="/sitemap-index.xml" />
	</head>
	<body>
		<Main client:only />
	</body>
</html>

<style is:global lang="scss">
	@font-face {
		font-family: "GenJyuuGothicL";
		src: url(/GenJyuuGothicL-Light.ttf);
	}

	* {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
		font-family: GenJyuuGothicL;
		font-size: 18px;
		line-height: 1.8;
		font-weight: 400;

		&:focus {
			outline: none;
		}
	}

	html,
	body {
		width: 100%;
		height: 100%;
	}

	html {
		overflow: hidden;
	}

	body {
		overflow-y: scroll;
		overflow-x: hidden;
	}
</style>
